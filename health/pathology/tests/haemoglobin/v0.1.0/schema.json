{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://common.schemas.verida.io/health/pathology/tests/haemoglobin/v0.1.0/schema.json",
  "title": "Haemoglobin Test",
  "titlePlural": "Haemoglobin Tests",
  "type": "object",
  "layouts": {
    "view": [
      "fullName",
      "dateOfBirth",
      "testTimestamp",
      "result",
      "acceptable"
    ],
    "create": [
      "fullName",
      "dateOfBirth",
      "patientId",
      "testTimestamp",
      "result",
      "acceptable"
    ]
  },
  "properties": {
    "result": {
      "title": "Result (g/dL)",
      "type": "integer"
    },
    "acceptable": {
      "title": "Acceptable range?",
      "type": "string",
      "enum": ["Yes", "No"]
    }
  }
}
