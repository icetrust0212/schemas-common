    "titlePlural": "Credentials",
    "type": "object",
    "appearance": {
        "style": {
            "color": "#4bbf95",
            "icon": "./icon.svg"
        }
    },
    "database": {
        "name": "credential"
    },
    "allOf": [
        {
            "$ref": "https://core.schemas.verida.io/base/v0.1.0/schema.json"
        },
        {
            "properties": {
