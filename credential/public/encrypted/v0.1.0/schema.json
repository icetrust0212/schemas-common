{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://common.schemas.verida.io/credential/public/encrypted/v0.1.0/schema.json",
    "title": "Encrypted credential",
    "description": "An encrypted credential",
    "type": "object",
    "appearance": {
        "style": {
            "color": "#FD4F64",
            "icon": "/credential/base/latest/icon.svg"
        }
    },
    "database": {
      "name": "credential_public_encrypted"
    },
    "properties": {
      "content": {
        "title": "Content",
        "type": "string"
      },
      "expires": {
        "title": "Expires",
        "type": "string",
        "format": "date-time"
      }
    },
    "required": [
      "content"
    ]
  }