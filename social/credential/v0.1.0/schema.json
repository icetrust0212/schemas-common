{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://common.schemas.verida.io/social/credential/reputation/v0.1.0/schema.json",
    "name": "https://common.schemas.verida.io/social/credential/reputation",
    "title": "Social reputation",
    "titlePlural": "Social reputation",
    "type": "object",
    "veridaProofs": {
        "origin-type-exists": ["$did", "$origin", "$type"],
        "origin-type-unique": ["$did", "$origin", "$type", "$uniqueAttribute"]
    },
    "layouts": {
      "view": [
        "name",
        "description",
        "origin",
        "type",
        "uniqueAttribute"
      ],
      "create": [
        "name",
        "description",
        "origin",
        "type",
        "uniqueAttribute"
      ]
    },
    "properties": {
        "did": {
            "title": "DID",
            "description": "DID linked to this reputation",
            "type": "string"
        },
        "name": {
            "title": "Name",
            "description": "Unique name of this credential",
            "type": "string"
        },
        "origin": {
            "title": "Origin",
            "description": "Origin of this reputation (ie: twitter)",
            "type": "string"
        },
        "type": {
            "title": "Type",
            "description": "Type of reputation (ie: 10k followers or account)",
            "type": "string"
        },
        "image": {
            "title": "Image URL",
            "description": "URL of an image representing this credential",
            "type": "string"
        },
        "description": {
            "title": "Description",
            "description": "Description of this credential",
            "type": "string"
        },
        "attributes": {
            "title": "Attributes",
            "description": "Additional attributes for this reputation",
            "type": "object"
        },
        "uniqueAttribute": {
            "title": "Unique attribute",
            "description": "Unique attribute relevant for this origin / type. ie: Where origin=twitter and type=account, uniqueAttribute may be the Twitter account ID",
            "type": "string"
        },
        "background_color": {
            "title": "Background color",
            "description": "Six character hexadecimal without # prefix",
            "type": "string"
        },
        "animation_url": {
            "title": "Animation URL",
            "description": "A URL to a multi-media attachment for the item.",
            "type": "string"
        },
        "youtube_url": {
            "title": "Youtube URL",
            "description": "A URL to a Youtube video",
            "type": "string"
        },
        "external_url": {
            "title": "External URL",
            "description": "An external URL with more info (ie: twitter account page)",
            "type": "string"
        }
    },
    "required": ["did", "name", "origin", "type"]
  }