{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://common.schemas.verida.io/profile/basicProfile/v0.1.0/schema.json",
    "title": "Profile",
    "description": "Public profile data for a user",
    "type": "object",
    "database": {
        "name": "profile_public",
        "idFormat": "{{ model.key }}"
    },
    "allOf": [
        {"$ref": "https://core.schemas.verida.io/base/v0.1.0/schema.json"}
    ],
    "properties": {
        "name": {
            "type": "string",
            "minLength": 2,
            "maxLength": 140
        },
        "country": {
            "type": "string",
            "minLength": 2,
            "maxLength": 140
        },
        "description": {
            "type": "string",
            "minLength": 2,
            "maxLength": 140
        },
        "avatar": {
            "type": "object",
            "description": "Profile image for the profile",
            "properties": {
                "uri": {
                    "type": "string"
                }
            }
        }
    },
    "required": ["name"]
  }